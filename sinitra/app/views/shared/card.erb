<a href="/posts/<%= post.id %>">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= post.photo ? post.photo : 'https://source.unsplash.com/random' %>');">
    <div class="card-description">
      <h2><%= post.title %></h2>
      <%= erb :'shared/rating', locals: { post: post }%>
    </div>
    <div class="card-hover">
      <p><%= post.content %></p>
    </div>
  </div>
</a>
